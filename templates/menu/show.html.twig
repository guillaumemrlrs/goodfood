{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdMenu</th>
                <td>{{ menu.idMenu }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ menu.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ menu.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ menu.prix }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ menu.image }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ menu.disponible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('menu_index') }}">back to list</a>

    <a href="{{ path('menu_edit', {'idMenu': menu.idMenu}) }}">edit</a>

    {{ include('menu/_delete_form.html.twig') }}
